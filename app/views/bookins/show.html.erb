<div>
  <h1>Trip summary</h1>

  <h2><%= @bookin.flight.schedule_on.strftime('%d %B %Y') %></h2>
  <table>
    <thead>
      <tr>
        <th>Departure</th>
        <th>Arrival</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @bookin.flight.from_airport.code %> <%= @bookin.flight.schedule_on.strftime('%H:%M') %></td>
        <td><%= @bookin.flight.to_airport.code %> <%= (@bookin.flight.schedule_on + (@bookin.flight.duration/60).to_i.hours).strftime('%H:%M') %></td>
      </tr>
    </tbody>
  </table>
  <h1>Passenger details</h1>

  <table>
    <thead>
      <tr>
        <th>Passenger name</th>
      </tr>
    </thead>
    <tbody>
    <% @bookin.passengers.each_with_index do |passenger, idx| %>
      <tr>
        <td><%= passenger.name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <h1>Contact details</h1>

  <table>
    <thead>
      <tr>
        <th>Passenger name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
    <% @bookin.passengers.each_with_index do |passenger, idx| %>
      <tr>
        <td><%= passenger.name %></td>
        <td><%= passenger.email %></td>
      </tr>
    <% end %>
    </tbody>
  </table>  

  <%= link_to 'Book more flights', root_path, class: "button is-large is-dark is-outlined" %>
</div>